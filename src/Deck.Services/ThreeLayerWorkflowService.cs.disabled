            // åŸºç¡€è¯­æ³•æ£€æŸ¥
            if (!content.Contains("services:"))
            {
                result.ValidationErrors.Add("compose.yaml ç¼ºå°‘ services å­—æ®µ");
            }

            if (content.Contains("version:"))
            {
                result.Warnings.Add("å»ºè®®ç§»é™¤ compose.yaml ä¸­çš„ version å­—æ®µï¼ˆPodman Compose ä¸éœ€è¦ï¼‰");
            }
        }
        catch (Exception ex)
        {
            result.ValidationErrors.Add($"compose.yaml è¯»å–å¤±è´¥: {ex.Message}");
        }
    }
